{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "./out",		
		"lib": [
			"es6"
		],
		"noImplicitThis": true,
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"strictNullChecks": true,
		"experimentalDecorators": true,
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}